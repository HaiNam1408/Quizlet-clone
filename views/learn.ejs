<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://www.android-user.de/wp-content/uploads/2016/12/icon-quizlet.png" type="image/x-icon">
    <title>Quizlet | Learn</title>

    <!-- css -->
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/memoryCard.css">

    <!-- icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>

<body>

    <header class="row">
        <div class="header_left row">
            <div class="logo"><a href="/user/<%= account.id %>"><span class="logo_text">Quizlet</span></a></div>

            <ul class="row">
                <li><a href="/user/<%= account.id %>">Trang chủ</a>
                    <div class="box box_btn"></div>
                </li>
                <li><a href="#">Lời giải chuyên gia</a>
                    <div class="box"></div>
                </li>
                <li><a href="#">Thư viện của bạn</a>
                    <div class="box"></div>
                </li>
            </ul>
        </div>

        <div class="user row">
            <label class="check_box">
                <input type="checkbox" name="check_box">
            </label>

            <a href="#" class="user_nav">
                <img src="<%= account.avatar %> ">
            </a>
        </div>
    </header>

    <div class="container">
        <h2 class="nameCard">
            <%= lesson.lesson_name %>
        </h2>
        <p class="nameCard">
            (<%= lesson.description %>)
        </p>

        <div class="cardFrame">
            <div id="cards-container" class="cards">
                <div class="card active">
                    <% lesson.term.forEach((term, index)=> { %>
                        <div class="inner-card">
                            <div class="inner-card-front">
                                <i class="bi bi-volume-up"></i>
                                <div class="card-number">
                                    <span class="card-index">
                                        <%= index + 1 %> /
                                    </span>
                                    <span class="card-sum">
                                        <%= lesson.term.length %>
                                    </span>
                                </div>
                                <p>
                                    <%= term %>
                                </p>
                                <div class="navigation">
                                    <button id="prev" class="prev nav-button">
                                        <i class="bi bi-arrow-left"></i>
                                    </button>

                                    <button id="next" class="next nav-button">
                                        <i class="bi bi-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="inner-card-back">
                                <i class="bi bi-volume-up"></i>
                                <div class="card-number">
                                    <span class="card-index">
                                        <%= index + 1 %> /
                                    </span>
                                    <span class="card-sum">
                                        <%= lesson.term.length %>
                                    </span>
                                </div>
                                <p>
                                    <%= lesson.mean[index] %>
                                </p>
                                <img src="<%= lesson.image[index] %>">
                                <div class="navigation">
                                    <button id="prev" class="prev nav-button">
                                        <i class="bi bi-arrow-left"></i>
                                    </button>

                                    <button id="next" class="next nav-button">
                                        <i class="bi bi-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>

        </div>
    </div>

</body>
<script src="/javascripts/card.js"></script>

</html>