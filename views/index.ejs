<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="https://www.android-user.de/wp-content/uploads/2016/12/icon-quizlet.png" type="image/x-icon">
  <title>Quizlet | Home</title>

  <!-- css -->
  <link rel="stylesheet" href="/stylesheets/style.css">

  <!-- icon -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>

<body>

  <header class="row">
    <div class="header_left row">
      <div class="logo"><a href="/"><span>Quizlet</span></a></div>

      <ul class="row">
        <li><a href="/">Trang chủ</a>
          <div class="box box_btn"></div>
        </li>
        <li><a href="#">Lời giải chuyên gia</a>
          <div class="box"></div>
        </li>
        <li><a href="#">Thư viện của bạn</a>
          <div class="box"></div>
        </li>
        <a href="/user/create-page/<%= account.id %>"><button class="create btn">Tạo</button></a>
      </ul>
    </div>

    <div class="search">
      <input type="text" placeholder="Học phần,...">
      <i class="bi bi-search"></i>
    </div>

    <div class="user row">
      <label class="check_box">
        <input type="checkbox" name="check_box">
      </label>

      <a href="#" class="user_nav">
        <img src="<%= account.avatar %>">
      </a>
      <!-- <a href="/login" class="login-btn btn">Đăng Nhập</a>
      <a href="/login" class="register-btn btn">Đăng Ký</a> -->
    </div>
  </header>

  <div class="container">
    <h2>Học phần gần đây</h2>

    <ul>
      <% lessons.forEach(lesson=> { %>
        <li>
          <a href="#">
            <h3 class="term_name">
              <%= lesson.lesson_name %>
            </h3>
            <p class="tern_txt">
              <%= lesson.term.length %> thuật ngữ
            </p>

            <div class="term_user">
              <a href="#" class="row">
                <img src="<%= account.avatar %>">
                <span>
                  <%= account.user_name %>
                </span>
              </a>
            </div>
            <div class="term_box"></div>
            <div class="custom">
              <i class="bi bi-three-dots-vertical"></i>
              <div class="custom_list">
                <div class="custom_item">
                  <a href="/user/update-page/<%= account.id %>/<%= lesson.id %>" class="row">
                    <span class="bi bi-pen-fill"></span>
                    <h4>Chỉnh sửa</h4>
                  </a>
                </div>
                <div class="custom_item">
                  <a href="/user/delete-lesson/<%= account.id %>/<%= lesson.id %>" class="row">
                    <span class="bi bi-trash3-fill"></span>
                    <h4>Xóa</h4>
                  </a>
                </div>
              </div>
            </div>
          </a>
        </li>
        <% }) %>
    </ul>
  </div>

</body>
<script src="/javascripts/script.js"></script>

</html>